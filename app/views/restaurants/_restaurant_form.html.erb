<%= form_for :restaurant do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>

  <div class="field">
    <%= f.label :cuisine %>
    <%= f.text_area :cuisine %>
  </div>

  <div class="field">
    <%= f.label :website %>
    <%= f.url_field :website %>
  </div>

  <div class="field">
    <%= f.label :price_range %>
    <%= f.number_field :price_range %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :time_open %>
    <%= f.number_field :time_open %>
  </div>

  <div class="field">
    <%= f.label :time_close %>
    <%= f.number_field :time_close %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
